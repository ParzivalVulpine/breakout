# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Godot script files (.gd)
[*.gd]
indent_style = tab
indent_size = 4
tab_width = 4

# Godot scene files (.tscn)
[*.tscn]
indent_style = tab
indent_size = 4
tab_width = 4

# Godot resource files (.tres)
[*.tres]
indent_style = tab
indent_size = 4
tab_width = 4

# Godot project files
[project.godot]
indent_style = tab
indent_size = 4
tab_width = 4

# Godot import files (.import)
[*.import]
indent_style = tab
indent_size = 4
tab_width = 4

# Godot C# files (if using C#)
[*.cs]
indent_style = tab
indent_size = 4
tab_width = 4

# JSON files (for Godot addons and configs)
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2

# Web files (if developing web exports)
[*.{html,css,js,ts}]
indent_style = space
indent_size = 2

# Shader files
[*.{glsl,hlsl,gdshader}]
indent_style = tab
indent_size = 4
tab_width = 4

# Text files
[*.txt]
indent_style = space
indent_size = 2

# Makefiles (require tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4
tab_width = 4
